<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Peirre's Bakery</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
      @* <meta name="viewport" content="width=device-width,initial-scale=1">   *@
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Peirre's Bakery</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav class="mx-lg">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Treat">View All Treats</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Flavor">View All Flavors</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Treat/Create">Add New Treat</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Flavor/Create">Add New Flavor</a>
          </li>
        </ul>
      </div>
    </nav>
      <BR>
      <h1>VIEW OUR TREATS & FLAVORS</h1>
      </BR>
      
      @using Bakery.Models;

      <h4>Treats</h4>
      @if (Model["treats"].Length == 0)
      {
          <p>No treats have been added yet!</p>
      }
      <ul>
        @foreach (Treat treat in Model["treats"])
        {
          <li>@Html.ActionLink($"{treat.Name}", "Details", "Treat", new {id = @treat.TreatId})</li>
        }
      </ul>

      <h4> Flavors </h4>
      @if (Model["flavors"].Length == 0)
      {
        <p>No Flavors have been added yet!</p>
      }
      <ul>
          @foreach (Flavor flavor in Model["flavors"])
          {
            <li>@Html.ActionLink(@flavor.Name, "Details", "Flavor", new{id = @flavor.FlavorId})</li>
          }
      </ul>
    <p>@Html.ActionLink("Manage flavors", "Index", "Flavor")</p>

  </body>
</html>